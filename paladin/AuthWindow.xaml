<Window x:Class="paladin.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:paladin"
        mc:Ignorable="d"
        Title="AuthWindow" Height="620" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
            <RowDefinition Height="150*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="125*"></ColumnDefinition>
            <ColumnDefinition Width="200*"></ColumnDefinition>
            <ColumnDefinition Width="125*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="1" Grid.Row="2" Text="login"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="3" Text="password"></TextBox>
        <Button Grid.Column="1" Grid.Row="4" Content="вход"></Button>
        <Image Source="resources\krutoikot.jpg" Width="150" Height="150" Grid.Column="1" Grid.Row="1"></Image>
        
    </Grid>
</Window>
